{
  "manifest_version": 2,
  "name": "My Bookmark",
  "description": "Easily add bookmarks to any category. Includes spotlight-like search with mouse/keyboard support.",
  "version": "1.0",
  "default_locale": "en",

  "background": {
    "page": "init.html"
  },

  "icons": { 
    "16": "bookmark.png",
    "48": "bookmark.png",
    "128": "bookmark.png" 
  },

  "browser_action": {
    "default_icon": {
      "19": "bookmark.png",
      "38": "bookmark.png"
    },
    "default_title": "Bookmark Button",
    "default_popup": "background.html"
  },
  "commands": {
    "_execute_browser_action": {

      "suggested_key": {
        "default": "Ctrl+B",
        "chromeos": "Ctrl+B"
        
      }
    }
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ]
}